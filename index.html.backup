    }

    .controls {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
    }

    .controls h2 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: #1f2937;
    }

    .control-group {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 0.5rem;
      font-weight: 600;
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
      color: white;
      box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.4);
    }

    .btn-secondary {
      background: white;
      color: #374151;
      border: 2px solid #e5e7eb;
    }

    .btn-secondary:hover {
      background: #f9fafb;
      border-color: #2563eb;
      color: #2563eb;
    }

    .info-box {
      background: #eff6ff;
      border-left: 4px solid #2563eb;
      padding: 1rem;
      border-radius: 0.5rem;
      margin-top: 1.5rem;
    }

    .info-box h4 {
      font-size: 0.875rem;
      font-weight: 600;
      color: #1e40af;
      margin-bottom: 0.5rem;
    }

    .info-box p {
      font-size: 0.875rem;
      color: #1e40af;
      margin: 0;
    }

    .code-box {
      background: #1f2937;
      color: #e5e7eb;
      padding: 1rem;
      border-radius: 0.5rem;
      font-family: 'Courier New', monospace;
      font-size: 0.875rem;
      overflow-x: auto;
      margin-top: 1rem;
    }

    .footer {
      text-align: center;
      color: white;
      margin-top: 3rem;
      opacity: 0.9;
    }

    .footer a {
      color: white;
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .header h1 {
        font-size: 2rem;
      }

      .demo-grid {
        grid-template-columns: 1fr;
      }

      body {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>üá™üáπ Ethiopian Date Picker</h1>
      <div class="flag-accent"></div>
      <p class="subtitle">Professional, Beautiful & Functional | ·àô·ã´·ãä·ç£ ·âÜ·äï·åÜ ·ä•·äì ·â∞·åç·â£·à´·ãä</p>
    </div>

    <!-- Controls -->
    <div class="controls">
      <h2>‚öôÔ∏è Configuration</h2>
      <div class="control-group">
        <button class="btn btn-primary" onclick="toggleDarkMode()">üåô Toggle Dark Mode</button>
        <button class="btn btn-secondary" onclick="getAllValues()">üìã Get All Values</button>
        <button class="btn btn-secondary" onclick="setCustomDate()">üìÖ Set Custom Date</button>
        <button class="btn btn-secondary" onclick="resetAll()">üîÑ Reset All</button>
      </div>
      
      <div class="info-box" id="infoBox" style="display: none;">
        <h4>Selected Dates</h4>
        <p id="infoText"></p>
      </div>
    </div>

    <!-- Demo Cards -->
    <div class="demo-grid">
      <!-- Basic Date Picker -->
      <div class="demo-card">
        <h3>üìÜ Basic Date Picker</h3>
        <p>Simple date picker with default settings. Click the input to select an Ethiopian date.</p>
        
        <div class="form-group">
          <label for="date1">Select Date (Amharic)</label>
          <input type="text" id="date1" class="form-input" placeholder="·âÄ·äï ·ã≠·àù·à®·å°..." readonly>
        </div>

        <div class="code-box">
new EthiopianDatePicker('#date1', {
  locale: 'am'
});</div>
      </div>

      <!-- English Locale -->
      <div class="demo-card">
        <h3>üåç English Locale</h3>
        <p>Date picker with English language support and holiday highlighting.</p>
        
        <div class="form-group">
          <label for="date2">Select Date (English)</label>
          <input type="text" id="date2" class="form-input" placeholder="Select a date..." readonly>
        </div>

        <div class="code-box">
new EthiopianDatePicker('#date2', {
  locale: 'en',
  highlightHolidays: true
});</div>
      </div>

      <!-- Dark Mode -->
      <div class="demo-card">
        <h3>üåô Dark Mode</h3>
        <p>Beautiful dark theme for low-light environments. Fully accessible and easy on the eyes.</p>
        
        <div class="form-group">
          <label for="date3">Select Date (Dark Mode)</label>
          <input type="text" id="date3" class="form-input" placeholder="·âÄ·äï ·ã≠·àù·à®·å°..." readonly>
        </div>

        <div class="code-box">
new EthiopianDatePicker('#date3', {
  locale: 'am',
  darkMode: true
});</div>
      </div>

      <!-- With Callbacks -->
      <div class="demo-card">
        <h3>üéØ With Event Callbacks</h3>
        <p>Date picker with custom event handlers for date changes and picker state.</p>
        
        <div class="form-group">
          <label for="date4">Select Date (With Events)</label>
          <input type="text" id="date4" class="form-input" placeholder="Select a date..." readonly>
        </div>

        <div class="info-box">
          <h4>Event Log</h4>
          <p id="eventLog">No events yet...</p>
        </div>

        <div class="code-box">
new EthiopianDatePicker('#date4', {
  locale: 'en',
  onChange: (date) => {
    console.log('Date changed:', date);
  }
});</div>
      </div>

      <!-- Date Range -->
