  <!-- Scripts -->
  <script src="js/ethiopian-calendar.js"></script>
  <script src="js/datepicker.js"></script>
  <script>
    // Initialize date pickers
    let pickers = {};

    // Basic Amharic picker
    pickers.picker1 = new EthiopianDatePicker('#date1', {
      locale: 'am',
      highlightHolidays: true
    });

    // English picker
    pickers.picker2 = new EthiopianDatePicker('#date2', {
      locale: 'en',
      highlightHolidays: true
    });

    // Dark mode picker
    pickers.picker3 = new EthiopianDatePicker('#date3', {
      locale: 'am',
      darkMode: true,
      highlightHolidays: true
    });

    // Picker with callbacks
    pickers.picker4 = new EthiopianDatePicker('#date4', {
      locale: 'en',
      onChange: (date) => {
        const eventLog = document.getElementById('eventLog');
        eventLog.textContent = `Selected: ${date.formatted} (Gregorian: ${date.gregorian.toDateString()})`;
      },
      onOpen: () => {
        console.log('Picker opened');
      },
      onClose: () => {
        console.log('Picker closed');
      }
    });

    // Date range restricted
    const today = new Date();
    const maxDate = new Date(today);
    maxDate.setDate(maxDate.getDate() + 30);

    pickers.picker5 = new EthiopianDatePicker('#date5', {
      locale: 'am',
      minDate: today,
      maxDate: maxDate,
      highlightHolidays: true
    });

    // Holiday highlighting
    pickers.picker6 = new EthiopianDatePicker('#date6', {
      locale: 'en',
      highlightHolidays: true,
      showTodayButton: true
    });

    // Control functions
    function toggleDarkMode() {
      Object.values(pickers).forEach(picker => {
        picker.options.darkMode = !picker.options.darkMode;
        if (picker.options.darkMode) {
          picker.container.classList.add('dark-mode');
        } else {
          picker.container.classList.remove('dark-mode');
        }
      });
    }

    function getAllValues() {
      const values = {};
      let hasValues = false;
      
      Object.keys(pickers).forEach((key, index) => {
        const selected = pickers[key].getSelectedDate();
        if (selected) {
          hasValues = true;
          values[`Date Picker ${index + 1}`] = pickers[key].calendar.formatDate(
            selected.year, selected.month, selected.day, 'en'
          );
        }
      });

      const infoBox = document.getElementById('infoBox');
      const infoText = document.getElementById('infoText');
      
      if (hasValues) {
        infoBox.style.display = 'block';
        infoText.textContent = JSON.stringify(values, null, 2);
      } else {
        infoBox.style.display = 'block';
        infoText.textContent = 'No dates selected yet. Click on any date picker to select a date!';
      }
    }

    function setCustomDate() {
      // Set a specific Ethiopian date (Meskerem 1, 2017 - Ethiopian New Year)
      pickers.picker1.setDate(2017, 1, 1);
      alert('Set date to Meskerem 1, 2017 (Enkutatash - Ethiopian New Year) üéâ');
    }

    function resetAll() {
      Object.values(pickers).forEach(picker => {
        picker.input.value = '';
        picker.selectedDate = null;
      });
      
      const infoBox = document.getElementById('infoBox');
      infoBox.style.display = 'none';
      
      alert('All date pickers have been reset! ‚ú®');
    }

    // Log initialization
    console.log('‚úÖ Ethiopian Date Picker initialized successfully!');
    console.log('üì¶ Total pickers:', Object.keys(pickers).length);
    console.log('üéØ Features: Amharic/English, Dark Mode, Holidays, Keyboard Nav, Accessibility');
  </script>
</body>
